<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multiscreenapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiScreenApp">
        <activity
            android:name=".Activities.ColorsActivity"
            android:label="@string/category_colors"/>

        <activity android:name=".Activities.FamilyActivity"
            android:label="@string/category_family"/>

        <activity android:name=".Activities.PhrasesActivity"
            android:label="@string/category_phrases"/>

        <activity android:name=".Activities.NumbersActivity"
            android:label="@string/category_numbers"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>